{
  "name": "fontviewer",
  "version": "0.1.0",
  "description": "Fontviewer",
  "main": "index.js",
  "author": "Sotaro Tommykawa",
  "license": "MIT",
  "dependencies": {
    "font-manager": "^0.3.0",
    "color-convert": "^1.9.3"
  },
  "devDependencies": {
    "electron": "^7.2.4",
